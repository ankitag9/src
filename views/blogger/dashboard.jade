body
    header.header
        #myheader.navbar.navbar-fixed-top
            .navbar-inner
                .container-fluid
                    .col-xs-2
                        a.navbar-brand(href='#')
                            img(src='img/logo.png')
                    //form.navbar-form.navbar-left.hidden-xs(role='search')
                        .form-group
                            input.form-control(type='text', placeholder='Search')
                            a(href='')
                                span.glyphicon.glyphicon-search
                    //
                      <ul class="nav navbar-right">
                                <div class="noti">
                               <a href="#"><span class="glyphicon glyphicon-bell"></span> <span class="badge">42</span></a>
                               </div>
                              </ul>
                    ul.nav.navbar-right
                        .noti.dropdown
                            //a#dropdownMenu2.dropdown-toggle(href='', data-toggle='dropdown')
                                span.glyphicon.glyphicon-info-sign
                                span.badge.badge1 10
                            ul.dropdown-menu(role='menu', aria-labelledby='dropdownMenu2')
                                li.text-center Notifications
                                li(role='presentation')
                                    a(role='menuitem', tabindex='-1', href='#')
                                        img.img-circle(src='img/upic2.png', alt='1')
                                        span A new book is available for review
                                li(role='presentation')
                                    a(role='menuitem', tabindex='-1', href='#')
